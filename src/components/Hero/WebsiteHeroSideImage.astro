---
/**
 * * Hero with image one the side
 */

import Button from "@components/Button/Button.astro";
import heroImage from "@images/storm-2.webp";
import { getLocaleFromUrl } from "@js/localeUtils";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Badge3 from "@components/Badge/Badge3.astro";


const currLocale = getLocaleFromUrl(Astro.url);
---

<!-- "dark" class forces dark mode for this section -->
<!-- "dark" class forces dark mode for this section -->
<section id="hero-side" class="mt-14 overflow-x-clip">
	<div class="site-container mx-auto px-4 py-16 md:py-20">
		<div
			class="mx-auto grid max-w-md gap-10 text-center md:max-w-5xl md:grid-cols-2 md:text-left xl:items-center"
		>
			<div class="mx-auto my-auto w-full pt-4 md:ml-0 md:max-w-[560px] md:py-10 lg:pr-10">
				<div class="mx-auto max-w-[400px] md:ml-0" data-aos="fade-up" data-aos-trigger="#hero-side">
					<h1
						class="main-text-gradient mb-1 text-pretty text-4xl font-medium leading-tight tracking-tight md:text-5xl md:leading-tight"
					>
						Your Site Will Not Just Shine, They Ignite
					</h1>
					<Badge3>Web Design/Development as a Service</Badge3>	
				</div>
				<p
					class="description mb-8 text-pretty lg:text-lg"
					data-aos="fade-up"
					data-aos-delay=".1"
					data-aos-trigger="#hero-side"
				>
					Your hunt for cool, modern website ends here. We simplify your digital presence; bringing your brand to the next level.
				</p>
				<div
					class="mt-6 flex flex-wrap justify-center gap-4 md:justify-start"
					data-aos="fade-up"
					data-aos-delay=".2"
					data-aos-trigger="#hero-side"
				>
					<Button variant="primary" href="https://outlook.office365.com/book/meeting@berlime.com/s/Tyovt-rHPU6N6IQ7EPVEFg2">
						Schedule a Discovery Call
					</Button>
					<Button
						variant="ghost"
						arrow="right"
						href="#pricing"
						rel="noopener noreferrer"
					>
						See Pricing
					</Button>
				</div>
			</div>

			<div
				class="flex h-full w-full flex-grow items-center"
				data-aos="fade-in"
				data-aos-trigger="#hero-side"
				data-aos-delay=".5"
			>
				<div
					class="relative h-full overflow-hidden rounded-xl border border-base-200 dark:border-base-800"
				>
					<Image
						src={heroImage}
						class="min-h-full w-auto object-cover"
						alt="hero"
						loading="eager"
						width={500}
						densities={[1.5, 2]}
					/>
				</div>
			</div>
		</div>
	</div>
</section>
