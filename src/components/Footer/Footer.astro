---
import { getRelativeLocaleUrl } from "astro:i18n";

// components
import FooterLink from "@components/Footer/FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import Button from "@components/Button/Button.astro";
import SocialIcon from "@components/SocialIcon/SocialIcon.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);

const today = new Date();
---

<footer class="mt-14 overflow-clip pb-10 pt-16">
	<div class="site-container">
		<div class="border-b border-b-base-200 pb-10 dark:border-b-base-800">
			<div class="flex flex-wrap">
				<div class="mb-6 w-full md:w-1/2">
					<div class="max-w-xs">
						<SiteLogo />
						<p class="description mt-11 tracking-tight">
							A Web-Development as a Service - WDaaS. Cutting costs, saving time, & delivering
							quality.
						</p>
					</div>
				</div>
				<div class="w-full md:w-1/2">
					<div class="flex flex-wrap justify-between gap-x-16 gap-y-8">
						<!-- first links column -->
						<div class="w-auto py-2">
							<h3 class="mb-8 font-medium tracking-tight text-base-800 dark:text-base-300">
								Support Programs
							</h3>
							<ul class="flex flex-col gap-3">
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>NGOs</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Professionals</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Home-Based Business</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Start Ups</FooterLink
									>
								</li>
							</ul>
						</div>

						<!-- second links column -->
						<div class="w-auto py-2">
							<h3 class="mb-8 font-medium tracking-tight text-base-800 dark:text-base-300">
								Important Links
							</h3>
							<ul class="flex flex-col gap-3">
								<li>
									<FooterLink href="https://wiki.berlime.com">Wiki</FooterLink>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Resources</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/categories/updates")}
										>What's New</FooterLink
									>
								</li>
							</ul>
						</div>

						<!-- third links column -->
						<div class="w-auto py-2">
							<h3 class="mb-8 font-medium tracking-tight text-base-800 dark:text-base-300">
								Company
							</h3>
							<ul class="flex flex-col gap-3">
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Brand Assets</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/privacy-policy")}
										>Privacy Policy</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/terms")}
										>Terms & Conditions</FooterLink
									>
								</li>
								<li>
									<FooterLink href={getRelativeLocaleUrl(currLocale, "/coming-soon")}
										>Affiliate Programs</FooterLink
									>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="py-4">
			<div class="flex flex-wrap items-center justify-between">
				<div class="w-auto">
					<p class="description tracking-tight">
						&copy; {today.getFullYear()}
						{" "}<a href="https://bit.ly/companiessg">{siteData.name} Solutions Pte. Ltd.</a>
					</p>
				</div>
				<div class="w-auto">
					<!-- Socials -->
					<div class="flex flex-col">
						<div class="flex gap-3">
							<SocialIcon
								href="https://x.com/BerlimeWM"
								icon="tabler/brand-x"
								social="twitter (x)"
								/>
							<SocialIcon
								href="https://www.upwork.com/agencies/1893631511197085545/"
								icon="tabler/brand-upwork"
								social="upwork"
							/>								
							<SocialIcon
								href="https://facebook.com/berlime"
								icon="tabler/brand-facebook"
								social="facebook"
							/>
							<SocialIcon
								href="https://instagram.com/berlime.wm"
								icon="tabler/brand-instagram"
								social="google"
							/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
