---
import Badge from "@components/Badge/Badge.astro";
import ContactForm from "@components/Forms/ContactForm.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";
// main layout
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import CtaLightningContact from "@components/Cta/CtaLightningContact.astro";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);

//form-data
const phone = "+65 9894 4737";
const email = "hello@berlime.com";
---

<BaseLayout title="Contact Me" description="Get in touch! Contact us using this page.">
	<div class="site-container mt-14">
		<section class="overflow-hidden pt-16 lg:py-28">
			<div class="flex flex-wrap">
				<div class="w-full p-8 md:w-1/2">
					<div class="mx-auto h-full max-w-lg md:ml-0">
						<Badge>Contact Us</Badge>
						<h1 class="h2">Have questions? Use this form to contact us.</h1>
						<p class="description text-lg">
							We are here to help you with your project. Get in touch with us and we will get back
							to you as soon as possible.<br /><br />
							<ul>
								<li>
									Email:
									<a href="mailto:hello@berlime.com" target="_blank" rel="noreferrer nofollow">
										{email}
									</a>
								</li>
								<li>
									WhatsApp:
									<a href="https://wa.me/+6598944737" target="_blank" rel="noreferrer nofollow">
										{phone}
									</a>
								</li>
							</ul>
						</p>
					</div>
				</div>
				<div class="mx-auto w-full max-w-xl p-8 md:mr-0 md:w-1/2">
					<ContactForm />
				</div>
			</div>
		</section>
	</div>
	<CtaLightningContact />
</BaseLayout>